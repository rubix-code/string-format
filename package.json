{
	"name": "@rubix-code/string-format",
	"version": "0.1.0",
	"description": "An extensible string formatter for Node.js",
	"main": "dist/index.js",
	"scripts": {
		"dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
		"build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"test": "jest",
		"pre-publish": "semver inc package.json && npm run build && npm run test && git add . && git commit -m \"chore: release\" && git push && git push --tags",
		"publish": "npm publish --access private"
	},
	"keywords": [
		"cron"
	],
	"author": "Rinzler D. Vicky",
	"license": "MIT",
	"devDependencies": {
		"@jest-decorated/core": "^0.1.7",
		"@types/jest": "^29.5.2",
		"@types/lodash": "^4.14.196",
		"jest": "^29.5.0",
		"jest-extended": "^4.0.1",
		"reflect-metadata": "^0.1.13",
		"semver": "^7.5.2",
		"ts-jest": "^29.1.0",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.6",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3"
	},
	"dependencies": {
		"lodash": "^4.17.21"
	}
}
